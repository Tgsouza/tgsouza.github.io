<%- include("partials/header.ejs") %>

<% if(locals.posts){%>
    <div class="main-posts-div">
    <% for(i = 0; i< posts.length; i++){%>
        <div class="post-div">
            <h1 class="post-title"><%= posts[i].title %></h1>
            <h4 class="author-field"><%= posts[i].author %> - (<%= posts[i].date %>)</h4>
            <p class="post-content"><%= posts[i].content %></p>
        </div>
    <% } %>
    </div>
<% }else{ %>
    <h1>No posts</h1>
<% } %>

<%- include("partials/footer.ejs") %>